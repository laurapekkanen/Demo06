        <TextBlock x:Name="Markat" HorizontalAlignment="Left" Margin="501,422,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <TextBox x:Name="insertEurot" HorizontalAlignment="Left" Margin="501,178,0,0" TextWrapping="Wrap" Text="Eurot" VerticalAlignment="Top"/>
        <TextBox x:Name="insertMarkat" HorizontalAlignment="Left" Margin="769,178,0,0" TextWrapping="Wrap" Text="Markat" VerticalAlignment="Top" DataContextChanged="euroValue"/>

    </Grid>
</Page>
